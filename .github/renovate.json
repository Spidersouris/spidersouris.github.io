{
  "extends": ["config:recommended", ":semanticCommitTypeAll(chore)"],
  "dependencyDashboard": false,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "labels": ["dependencies-minor"]
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies-major"]
    }
  ]
}

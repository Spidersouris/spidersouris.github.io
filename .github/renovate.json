{
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "dependencyDashboard": false,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "labels": ["dependencies-minor"]
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": true,
      "labels": ["dependencies-major"],
      "minimumReleaseAge": 10
    }
  ]
}
